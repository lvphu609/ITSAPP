<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Thay đổi mật khẩu"
            android:id="@+id/textView"
            android:textColor="@color/mauxanh"
            android:textSize="30dp"
            android:theme="@style/MyEditTextTheme"/>

        <EditText
            android:id="@+id/passcu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword"
            android:padding="10dp"
            android:theme="@style/MyEditTextTheme"/>
        <EditText
        android:id="@+id/passmoi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
        android:padding="10dp"
            android:theme="@style/MyEditTextTheme"/>
        <EditText
        android:id="@+id/cfpassmoi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPassword"
        android:padding="10dp"
            android:theme="@style/MyEditTextTheme"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/dialoghuy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:background="@color/mauxanh"
            android:textColor="@color/actionbar_text"/>
        <Button
            android:textColor="@color/actionbar_text"
            android:id="@+id/diaglogok"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="OK"
            android:background="@color/mauxam"
            android:enabled="false"
          />
    </LinearLayout>
    </LinearLayout>

