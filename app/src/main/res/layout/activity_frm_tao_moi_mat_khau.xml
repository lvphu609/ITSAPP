<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.example.llh_pc.it_support.activities.frmDangNhap">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:text="@string/lable_taomk"
            android:textSize="@dimen/frmDangNhap_textsizevalidation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            >

            <EditText
                android:maxLength="25"
                android:singleLine="true"
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mã xác thực"
                android:textSize="@dimen/frmDangNhap_textsize"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:id="@+id/txtMaXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maudo"
                android:textSize="@dimen/frmDangNhap_textsizevalidation" />

            <EditText
                android:maxLength="25"
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu mới"
                android:singleLine="true"
                android:textSize="@dimen/frmDangNhap_textsize"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:id="@+id/txtMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maudo"
                android:textSize="@dimen/frmDangNhap_textsizevalidation" />

            <EditText
                android:maxLength="25"
                android:id="@+id/edtAPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:singleLine="true"
                android:textSize="@dimen/frmDangNhap_textsize"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:id="@+id/txtNhapMK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maudo"
                android:textSize="@dimen/frmDangNhap_textsizevalidation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="right"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btnSetPass"
                android:layout_width="@dimen/frmDangNhap_btnLogin_Width"
                android:layout_height="@dimen/frmDangNhap_btnLogin_Height"
                android:background="@color/mauxam"
                android:enabled="false"
                android:text="Cập nhật"
                android:textColor="@color/actionbar_text"
                android:textSize="@dimen/frmDangNhap_textsizevalidation" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

