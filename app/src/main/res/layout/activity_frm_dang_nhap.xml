<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.llh_pc.it_support.activities.frmDangNhap">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/frmDangNhap_imageWidth"
            android:layout_height="@dimen/frmDangNhap_imageHeight"
            android:layout_gravity="center"
            android:src="@drawable/itsupport_logo_vuong" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <EditText
                android:textSize="@dimen/frmDangNhap_textsize"
                android:id="@+id/edtTenDangNhap"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frmDangNhap_edittext_Height"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:theme="@style/MyEditTextTheme"
                android:maxLength="25"
                />
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maudo"
                android:textSize="@dimen/frmDangNhap_textsizevalidation" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:textSize="@dimen/frmDangNhap_textsize"
                android:singleLine="true"
                android:typeface="normal"
                android:id="@+id/edtMatKhau"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frmDangNhap_edittext_Height"
                android:hint="Nhập mật khẩu"
                android:theme="@style/MyEditTextTheme"
                android:maxLength="25"/>
            <TextView
                android:id="@+id/txtMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maudo"
                android:textSize="@dimen/frmDangNhap_textsizevalidation"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/cbLuuTK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:button="@drawable/drb_checklogin"
            android:paddingLeft="10dp"
            android:text="Duy trì đăng nhập"
            android:textSize="@dimen/frmDangNhap_textsizevalidation"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtQuenMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:textColor="@color/mauxanh"
                android:layout_gravity="left|center"
                android:textSize="@dimen/frmDangNhap_textsizevalidation"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <Button
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/btnLogin"
                    android:layout_width="@dimen/frmDangNhap_btnLogin_Width"
                    android:layout_height="@dimen/frmDangNhap_btnLogin_Height"
                    android:background="@color/mauxam"
                    android:enabled="false"
                    android:text="Đăng nhập"
                    android:textColor="@color/actionbar_text"
                    android:textSize="@dimen/frmDangNhap_textsizevalidation"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>