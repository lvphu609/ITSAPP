<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="22dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/TitlePopUp"
        android:textColor="@color/mauden"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ValuePopUpOther"
        android:textColor="@color/mauxam" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edtOther"
        android:theme="@style/MyEditTextTheme"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/huypopup"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@color/mauxanh"
            android:text="Há»§y"
            android:textColor="@color/actionbar_text" />
        <Button
            android:id="@+id/okpopup"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="OK"
            android:background="@color/mauxam"
            android:textColor="@color/actionbar_text"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>
