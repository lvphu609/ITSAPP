
<ScrollView
    tools:context="com.example.llh_pc.it_support.activities.Profile"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootProfile"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.llh_pc.it_support.Profile"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <!--<ImageButton-->
            <!--android:id="@+id/bntImage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/no_avatar"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:enabled="false"-->
            <!--android:clickable="false"-->
            <!--android:background="@drawable/draw_shape"></ImageButton>-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/avatar"
                android:layout_height="@dimen/avatar1"
                android:src="@drawable/avatar"
                android:enabled="false"
                android:clickable = "false"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên:"
                        android:textColor="@color/mauden"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:paddingTop="13dp"
                        android:textSize="15sp"
                        android:id="@+id/full_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:ems="30"
                        android:enabled="false"
                        android:maxLength="24"
                        android:theme="@style/MyEditTextTheme"
                        android:inputType="textNoSuggestions|textMultiLine"



                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/valaditionname"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Emailtrong"
                    android:textColor="@color/maudo"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/valaditionname1"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameerror"
                    android:textColor="@color/maudo"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rateText"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="@color/mauden"/>

                    <RatingBar

                        android:layout_marginLeft="10dp"
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="2.0"
                        android:visibility="visible"
                        style="?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:paddingTop="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textColor="@color/mauden"/>

            <TextView
                android:layout_marginTop="5dp"
                android:paddingTop="17dp"
                android:textSize="15dp"
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:ems="40"
                android:singleLine="false"
                android:enabled="false"
                android:layout_marginLeft="60dp"
                android:theme="@style/MyEditTextTheme"
                android:textColor="@color/mauden"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu:"
                android:textStyle="bold"
                android:textColor="@color/mauden"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems = "40"
                    android:singleLine="false"
                    android:inputType="textPassword"
                    android:text="**********"
                    android:enabled="false"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="28dp"

                    />
                <Button
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/changepass"
                    android:text="Thay đổi mật khẩu"
                    android:layout_marginLeft="35dp"
                    android:enabled="false"
                    android:visibility="invisible"
                    android:textAllCaps="false"
                    android:textColor="@color/mauxanh"
                    android:background="@null"

                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textStyle="bold"
                android:textColor="@color/mauden"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:textSize="15dp"
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems = "40"
                    android:singleLine="false"
                    android:inputType="number"
                    android:enabled="false"
                    android:maxLength="20"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:id="@+id/vadalitionphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Emailtrong"
                    android:textColor="@color/maudo"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/vadalitionphone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phoneerror"
                    android:textColor="@color/maudo"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:paddingTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textStyle="bold"
                android:textColor="@color/mauden"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:paddingTop="13dp"
                    android:textSize="15dp"
                    android:id="@+id/dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="40"
                    android:singleLine="false"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:enabled="false"
                    android:layout_marginLeft="40dp"
                    android:maxLength="30"
                    android:theme="@style/MyEditTextTheme"
                    android:layout_marginTop="2dp"

                    />
                <TextView
                    android:id="@+id/validationaddress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Emailtrong"
                    android:textColor="@color/maudo"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/validationaddress1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addresserror"
                    android:textColor="@color/maudo"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại tài khoản:"
                android:textStyle="bold"
                android:textColor="@color/mauden"/>
            <TextView
                android:id="@+id/enableUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người sử dụng"
                android:visibility="gone"
                android:textColor="@color/mauden"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/enableProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người cung cấp dịch vụ"
                android:visibility="gone"
                android:textColor="@color/mauden"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            >
            <!--<GridView xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/gridView1"-->
            <!--android:numColumns="auto_fit"-->
            <!--android:gravity="center"-->
            <!--android:columnWidth="50dp"-->
            <!--android:stretchMode="columnWidth"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent" >-->

            <!--</GridView>-->

            <TextView
                android:id="@+id/viewchuyenmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên môn:"
                android:textStyle="bold"
                android:textColor="@color/mauden"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/bntPC"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="PC"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:id="@+id/bntLaptpo"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:text="Laptop"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"

                />
            <Button
                android:id="@+id/bntMayin"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:text="Máy in"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:id="@+id/bntMayScan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Máy Scan"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:id="@+id/photocopy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Máy Photocopy"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:id="@+id/bntMayfax"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Máy Fax"
                android:visibility="gone"
                android:enabled="false"
                android:background="@null"
                android:textColor="@color/mauxam"
                android:layout_alignParentLeft="true"
                />
        </LinearLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:paddingRight="20dp"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:layout_marginTop="10dp">-->
