<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    tools:context="com.example.llh_pc.it_support.activities.frmDangKy"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        >

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="71dp"
        android:src="@drawable/avatar"
        android:layout_weight="0.10" />

            <TextView
                android:id="@+id/chonanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh (*)"
                android:gravity="bottom"
                android:textSize="11dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/mauden"
                android:visibility="visible"/>

</RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <EditText
            android:id="@+id/full_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:ems="30"
            android:singleLine="false"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:hint="Nhập họ và tên (*)"
            android:imeOptions="flagNoFullscreen"
            android:shadowColor="@color/mauxam"
            android:theme="@style/EditTextStyle"
          />
            <TextView
                android:id="@+id/errorname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng nhập họ và tên"
                android:textColor="@color/maudo"
                android:gravity="left"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="40"
            android:singleLine="false"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="Nhập email (*)"
            android:theme="@style/EditTextStyle"
            />
        <TextView
            android:id="@+id/erroEmail1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập email"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
        <TextView
            android:id="@+id/erroEmail2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Email đã được đăng ký hoặc không đúng định dạng abc@mail.com"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems = "40"
            android:singleLine="false"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu (*)"
            android:theme="@style/EditTextStyle"
            />
        <TextView
            android:id="@+id/errorpass1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập mật khẩu"
            android:visibility="gone"
            android:layout_gravity="left"
            android:textColor="@color/maudo"/>
        <TextView
            android:id="@+id/errorpass2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu phải có ít nhất 6 ký tự"
            android:visibility="gone"
            android:layout_gravity="left"
            android:textColor="@color/maudo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!--/>-->

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems = "40"
            android:singleLine="false"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="Xác nhận mật khẩu (*)"
            android:theme="@style/EditTextStyle"

            />
        <TextView
            android:id="@+id/cfpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu phải trùng khớp với mật khẩu đăng ký"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
        <TextView
            android:id="@+id/cfpassword1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu không được bỏ trống"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems = "40"
            android:singleLine="false"
            android:maxLines="1"
            android:inputType="number"
            android:hint="Nhập số điện thoại (*)"
            android:theme="@style/EditTextStyle"
            />
        <TextView
            android:id="@+id/errorphone1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập số điện thoại"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
        <TextView
            android:id="@+id/errorphone2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại yêu cầu phải có ít nhất 10 ký tự"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:textSize="20dp"-->
        <!--android:textAppearance="?android:actionBarTabTextStyle"-->
        <!--android:text="Địa chỉ:"/>-->
        <EditText
            android:id="@+id/dia_chi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="40"
            android:singleLine="false"
            android:maxLines="2"
            android:inputType="text"
            android:hint="Nhập địa chỉ (*)"
            android:theme="@style/EditTextStyle"/>
        <TextView
            android:id="@+id/erroraddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập địa chỉ"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/maudo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context=".frmDangKy"
                android:text="Loại tài khoản:"
                android:textSize="20dp"
                android:textColor="#000000"

                />
            <CheckBox
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:text="Người sử dụng"
                android:button="@drawable/check_white"
                android:paddingLeft="5dp"
                />

            <CheckBox
                android:id="@+id/provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người cung cấp dịch vụ"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:button="@drawable/check_white"
                android:paddingLeft="5dp"
               ></CheckBox>
            <!--<ListView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/list"-->
            <!--android:choiceMode="singleChoice"-->
            <!--android:descendantFocusability="beforeDescendants">-->

            <!--</ListView>-->
            <TextView
                android:id="@+id/chuyenmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên môn:"
                android:textSize="20dp"

                android:visibility="gone"
                android:textColor="@color/mauden"
                />
            <TextView
                android:id="@+id/cbPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-PC"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/mauden"
                />
            <TextView
                android:id="@+id/cbLaptop"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Laptop"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"

                android:textColor="@color/mauden"
                />
            <TextView
                android:id="@+id/cbMayin"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Máy in"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"
                android:textColor="@color/mauden"

                />
            <TextView
                android:id="@+id/cbPhoto"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Máy Photocopy"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"
                android:textColor="@color/mauden"
                />
            <TextView
                android:id="@+id/cbScan"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Máy Scan"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"
                android:textColor="@color/mauden"
                />
            <TextView
                android:id="@+id/cbFax"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Máy Fax"
                android:visibility="gone"
                android:textSize="20dp"
                android:background="@null"
                android:textColor="@color/mauden"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/dangkyok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/actionbar_text"
            android:background="@color/mauxam"
            android:enabled="false"

            />
    </LinearLayout>
</LinearLayout >
</ScrollView>